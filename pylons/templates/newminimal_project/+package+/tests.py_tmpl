import unittest

from pylons.configuration import Configurator

class MyControllerTests(unittest.TestCase):
    def setUp(self):
        self.config = Configurator()
        self.config.begin()

    def tearDown(self):
        self.config.end()

    def _makeOne(self, request):
        from {{package}}.views import MyController
        return MyController(request)

    def test_index(self):
        request = DummyRequest()
        controller = self._makeOne(request)
        info = controller.index()
        self.assertEqual(info['project'], '{{project}}')

class DummyRequest(object):
    pass
